{
  "name": "vscode-wiremock",
  "displayName": "WireMock",
  "description": "Makes it easy to start a WireMock server",
  "version": "0.0.5",
  "publisher": "well-ar",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/well-ar/vscode-wiremock"
  },
  "categories": [
    "Testing",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
  ],
  "extensionDependencies": [
    "mindaro-dev.file-downloader"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-wiremock.attach",
        "title": "WireMock - Attach"
      },
      {
        "command": "vscode-wiremock.start",
        "title": "WireMock - Start"
      },
      {
        "command": "vscode-wiremock.reset",
        "title": "WireMock - Reset"
      },
      {
        "command": "vscode-wiremock.shutdown",
        "title": "WireMock - Shutdown"
      },
      {
        "command": "vscode-wiremock.requestLogs",
        "title": "WireMock - Request Logs"
      },
      {
        "command": "vscode-wiremock.loadMappings",
        "title": "WireMock - Load Mappings"
      },
      {
        "command": "vscode-wiremock.importMappings",
        "title": "WireMock - Import Mappings"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "WireMock configuration",
      "properties": {
        "wiremock.additionalCommandArgs": {
          "type": "string",
          "scope": "resource",
          "default": ""
        },
        "wiremock.host": {
          "type": "string",
          "scope": "resource",
          "default": "localhost"
        },
        "wiremock.port": {
          "type": "string",
          "scope": "resource",
          "default": "8080"
        },
        "wiremock.useHttps": {
          "type": "boolean",
          "scope": "resource",
          "default": false
        },
        "wiremock.autoReset": {
          "type": "boolean",
          "scope": "resource",
          "default": true
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "/*/mappings/**/*.json",
        "url": "./resources/wiremock-schema.json"
      },
      {
        "fileMatch": "mappings.json",
        "url": "./resources/wiremock-import-schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "@microsoft/vscode-file-downloader-api": "^1.0.1",
    "axios": "^1.2.1"
  }
}
